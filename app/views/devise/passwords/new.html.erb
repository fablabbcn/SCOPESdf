<div class="Auth">

  <div class="Auth__form">

    <%= render partial: 'devise/shared/nav' %>

    <div class="FormHeader">
      <h3 class="FormHeader__heading">Forgotten your password?</h3>
      <div class="FormHeader__description">
        Enter your email below and we'll send you instructions on how to reset your password.
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "Form" }) do |f| %>

        <%= devise_error_messages! %>

        <%= render 'devise/form_email' %>

        <div class="Form__actions">
          <%= f.submit "Send me reset password instructions", class: "Button Button--primary" %>
        </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>

</div>
