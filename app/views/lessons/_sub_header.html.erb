<div class="SubHeader">

  <div class="SubHeader__content">

    <h1 class="SubHeader__heading"><%= @lesson_obj.name.present? ? @lesson_obj.name : "New lesson" %></h1>

    <div class="SubHeader__tools">

      <%= active_link_to content_tag(:span, "Cancel"), delete_lesson_path(id: @lesson_obj.id), method: :delete, class: "SubHeader__tool SubHeader__tool--delete Button Button--small Button--light Button--outline Button--icon Button--icon--trash Button--no-label" %>

      <button class="SubHeader__tool SubHeader__tool--draft Button Button--small Button--icon Button--icon--document Button--outline Button--light">Save as Draft</button>

      <!-- TODO: Button--disabled class is dependent on @lesson_obj.publishable? function working, erroring right now -->
      <%= active_link_to "Publish Lessson", publish_lesson_path(id: @lesson_obj.id, method: :put), class: "SubHeader__tool SubHeader__tool--publish Button Button--small Button--icon Button--icon--locked Button--dark Button--disabled" %>

    </div>

  </div>

</div>
