<div class="PageHeader">
  <div class="PageHeader__content">
    <div class="PageHeader__title">
      <h1 class="PageHeader__heading">Settlers of Catan</h1>
    </div>
  </div>
</div>

<div class="Grid">

  <div class="Grid__header">
    <h3 class="Grid__heading">Expected outcomes</h3>
  </div>

  <div class="Grid__items Grid__items--border-bottom Grid__items--constrained-width">

    <% @lesson_obj.outcome_files.each_with_index do |file, i| %>
    <div class="Grid__item">
      <div class="Grid__image">
        <img src="<%= file.url(:thumbnail) %>"
          data-sizes="auto"
          data-srcset="<%= file.url(:thumbnail) %> 1x, <%= file.url(:thumbnail2x) %> 2x"
          class="Image Image--lazy" />
      </div>
      <!-- TODO: no functionality to have captions against images - descoped -->
      <!--
      <div class="Grid__caption Grid__caption--image">
        Photo caption <%= i %>
      </div>
      -->
    </div>
    <% end %>

  </div>

</div>

<div class="PageFooter">

  <div class="PageFooter__content">

    <div class="PageFooter__actions">
      <%= link_to "Back to Steps", lesson_steps_path(lesson_id: @lesson_obj.id), class: "PageFooter__action PageFooter__action--left Button Button--primary Button--small Button--icon Button--icon--left Button--arrow--left" %>
      <%= link_to "View all Lessons", lessons_path, class: "PageFooter__action PageFooter__action--right Button Button--primary Button--small Button--icon Button--icon--rightleft Button--arrow--right" %>
    </div>

  </div>

</div>