<%= render partial: "components/action_banner", locals: {
  statement: "Share your lesson with other educators around the world!",
  actions: [{
    label: "Add a lesson",
    path: new_lesson_path
  }]
  } %>

<div class="Filter">

  <div class="Filter__content">

    <a href="" class="Filter__sort">
      <div class="Filter__sort__label">
        Sort by:
      </div>
      <div class="Filter__sort__selected">
        Date created
      </div>
    </a>

    <a href="" class="Filter__filters">
      <div class="Filter__filters__label">
        Filter
      </div>
      <div class="Filter__filters__selected">
        <span>2</span>
      </div>
    </a>

  </div>

</div>

<%= render partial: "lessons/filter_overlay" %>

<div class="Grid">

  <div class="Grid__items Grid__items--centered">

    <% @lessons.each_with_index do |lesson, i| %>
        <div class="Grid__item">

          <%= render partial: 'lessons/thumb', locals: {
              lesson: lesson,
              i: i
          } %>

        </div>
    <% end %>

  </div>

</div>

<%= paginate @lessons %>
