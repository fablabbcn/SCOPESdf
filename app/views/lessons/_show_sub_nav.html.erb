<!-- sub navigation -->
<div class="SubNavigation">

  <div class="SubNavigation__content">

    <div class="SubNavigation__items">

      <%= active_link_to "Overview", lesson_path(id: @lesson_obj.id, section: :overview),
        class: "SubNavigation__item",
        class_active: "SubNavigation__item--active",
        active: @section == :overview %>

      <%= active_link_to "Standards", lesson_standards_path(lesson_id: @lesson_obj.id),
        class: "SubNavigation__item",
        class_active: "SubNavigation__item--active",
        active: @section == :standards %>

      <%= active_link_to "Steps", lesson_steps_path(lesson_id: @lesson_obj.id),
        class: "SubNavigation__item",
        class_active: "SubNavigation__item--active",
        active: @section == :steps %>

      <%= active_link_to "Outcomes", lesson_path(id: @lesson_obj.id, section: :outcomes),
        class: "SubNavigation__item",
        class_active: "SubNavigation__item--active",
        active: @section == :outcomes %>

      <%= prev_lesson_section(@section).present? ? link_to(content_tag(:span, "Prev"), prev_lesson_section(@section), class: "SubNavigation__nav SubNavigation__nav--prev") : nil %>
      <%= next_lesson_section(@section).present? ? link_to(content_tag(:span, "Next"), next_lesson_section(@section), class: "SubNavigation__nav SubNavigation__nav--next") : nil %>

      <div class="SubNavigation__dots">
        <% @lesson_sections.each do |name, path| %>
        <%= name != @section ? link_to("•", path, class: "SubNavigation__dot") : content_tag(:span, "•", class: "SubNavigation__dot") %>
        <% end %>
      </div>

    </div>

    <div class="SubNavigation__actions">
      <%= link_to "Edit Lesson", edit_lesson_path(id: @lesson_obj.id), class: "Button Button--small Button--icon Button--icon--edit" %>
    </div>

  </div>

</div>
